    <script>
        // Match filtering
        document.querySelectorAll('.match-filter-btn').forEach(button => {
            button.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.match-filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Add active class to clicked button
                this.classList.add('active');

                const filter = this.getAttribute('data-filter');
                const matchCards = document.querySelectorAll('.match-card');

                matchCards.forEach(card => {
                    if (filter === 'all') {
                        card.style.display = 'block';
                    } else {
                        if (card.getAttribute('data-team') === filter) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });

        // Squad filtering
        document.querySelectorAll('.squad-filter-btn').forEach(button => {
            button.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.squad-filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Add active class to clicked button
                this.classList.add('active');

                const position = this.getAttribute('data-position');
                const playerCards = document.querySelectorAll('.player-squad-card');
                const squadCategories = document.querySelectorAll('.squad-category');

                playerCards.forEach(card => {
                    if (position === 'all') {
                        card.style.display = 'flex';
                    } else {
                        if (card.getAttribute('data-position') === position) {
                            card.style.display = 'flex';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });

                // Show/hide category headers based on visibility
                squadCategories.forEach(category => {
                    const categoryPosition = category.getAttribute('data-category');
                    const cardsInCategory = category.querySelectorAll('.player-squad-card');
                    const visibleCards = Array.from(cardsInCategory).filter(card =>
                        card.style.display !== 'none' || position === 'all'
                    );

                    if (position === 'all' || position === categoryPosition) {
                        category.style.display = 'block';
                    } else if (visibleCards.length > 0) {
                        category.style.display = 'block';
                    } else {
                        category.style.display = 'none';
                    }
                });
            });
        });

        // Shop filtering
        document.querySelectorAll('.shop-filter-btn').forEach(button => {
            button.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.shop-filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Add active class to clicked button
                this.classList.add('active');

                const category = this.getAttribute('data-category');
                const productCards = document.querySelectorAll('.product-card');

                productCards.forEach(card => {
                    if (category === 'all') {
                        card.style.display = 'block';
                    } else {
                        if (card.getAttribute('data-category') === category) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });

